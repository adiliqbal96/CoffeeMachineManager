@page
@model CoffeeMachineManager.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg" style="width: 400px; border-radius: 10px;">
        <div class="card-header text-center" style="background-color: #5C5300; color: white; border-top-left-radius: 10px; border-top-right-radius: 10px;">
            <h3>Login</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="mb-4">
                    <label asp-for="User.Email" class="form-label">Email</label>
                    <input asp-for="User.Email" class="form-control" style="border: 1px solid #5C5300; border-radius: 5px;" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="User.Password" class="form-label">Password</label>
                    <input asp-for="User.Password" class="form-control" type="password" style="border: 1px solid #5C5300; border-radius: 5px;" />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn px-4 py-2" style="background-color: #f7c08a; color: #5C5300; font-weight: bold; border-radius: 5px;">
                        Login
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center" style="background-color: #f8f9fa; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
            <small>© 2024 - CoffeeMachineManager</small>
        </div>
    </div>
</div>
