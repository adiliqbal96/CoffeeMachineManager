<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffeeMachineManager</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .navbar {
            background-color: #5C5300;
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important;
        }

            .nav-link:hover {
                color: #f7c08a !important; /* Light orange hover effect */
            }

        .hero-section {
            flex: 1;
            background-color: #f8f9fa;
            color: #343a40;
            text-align: center;
            padding: 40px 0;
        }

        footer {
            background-color: #5C5300;
            color: #ffffff;
            padding: 20px 0;
            margin-top: auto;
        }

        .footer-section {
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="/">CoffeeMachineManager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/User/ManageUsers">Manage Users</a></li>
                        <li class="nav-item"><a class="nav-link" href="/User/Create">Create User</a></li>
                        <li class="nav-item"><a class="nav-link" href="/CoffeeMachines">Coffee Machines</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Feedback">Feedback</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Reports">Reports</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="hero-section">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </div>

    <!-- Footer -->
    <footer class="text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6 footer-section">
                    <h6>Contact Us</h6>
                    <p>Email: support@coffeemanager.com</p>
                    <p>Phone: +22873422</p>
                </div>
                <div class="col-md-6 footer-section">
                    <h6>Follow Us</h6>
                    <p>Stay updated with the latest news and updates!</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
