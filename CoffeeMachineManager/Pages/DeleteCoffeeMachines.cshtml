@page
@model DeleteCoffeeMachinesModel

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg" style="width: 30rem;">
        <div class="card-header bg-warning text-center">
            <h3 class="mb-0">Delete Coffee Machine</h3>
        </div>
        <div class="card-body">
            <p class="text-center text-danger">Are you sure you want to delete this coffee machine?</p>
            <dl class="row">
                <dt class="col-sm-4">Location</dt>
                <dd class="col-sm-8">@Model.CoffeeMachine.Location</dd>
                <dt class="col-sm-4">Type</dt>
                <dd class="col-sm-8">@Model.CoffeeMachine.Type</dd>
                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">@Model.CoffeeMachine.Status</dd>
            </dl>
            <form method="post">
                <div class="text-center">
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                    <a asp-page="CoffeeMachines" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
