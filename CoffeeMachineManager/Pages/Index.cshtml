@page
@model CoffeeMachineManager.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

@if (string.IsNullOrEmpty(Model.UserRole))
{
    <!-- Unauthenticated View -->
    <div class="container vh-100 d-flex flex-column justify-content-center align-items-center text-center">
        <div class="card shadow-lg" style="width: 400px; border-radius: 10px;">
            <div class="card-header text-center" style="background-color: #5C5300; color: white;">
                <h3>Login</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-page="/Login">
                    <div class="mb-4">
                        <label for="Email" class="form-label">Email</label>
                        <input name="Email" class="form-control" style="border: 1px solid #5C5300; border-radius: 5px;" />
                    </div>
                    <div class="mb-4">
                        <label for="Password" class="form-label">Password</label>
                        <input name="Password" type="password" class="form-control" style="border: 1px solid #5C5300; border-radius: 5px;" />
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn px-4 py-2" style="background-color: #f7c08a; color: #5C5300; font-weight: bold; border-radius: 5px;">
                            Login
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center" style="background-color: #f8f9fa;">
                <small>© 2024 - CoffeeMachineManager</small>
            </div>
        </div>
    </div>
}
else
{
    <!-- Hero Section: Visible Only for Admin and Employees -->
    <div class="hero-section text-center py-5">
        <img src="~/images/logo.png" alt="Coffee Machine Manager Logo" style="max-width: 100px;" />
        <h1 class="mt-3">Welcome to Coffee Machine Manager</h1>
        <p class="lead">Manage your coffee machines efficiently and effortlessly.</p>
    </div>

    <!-- Role-Based Dashboards -->
    <div class="container mt-5">
        @if (Model.UserRole == "Admin")
        {
            <!-- Admin Dashboard -->
            <h2 class="text-center">Admin Dashboard</h2>
            <div class="row text-center">
                <div class="col-md-4">
                    <a href="/User/ManageUsers" class="text-decoration-none">
                        <div class="card shadow" style="border: 2px solid #5C5300; border-radius: 10px;">
                            <div class="card-body">
                                <h5 class="card-title" style="color: #5C5300;">User Management</h5>
                                <p class="card-text">Easily add, edit, and remove users.</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="/CoffeeMachines" class="text-decoration-none">
                        <div class="card shadow" style="border: 2px solid #5C5300; border-radius: 10px;">
                            <div class="card-body">
                                <h5 class="card-title" style="color: #5C5300;">Coffee Machines</h5>
                                <p class="card-text">Manage coffee machines with ease.</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="/Reports" class="text-decoration-none">
                        <div class="card shadow" style="border: 2px solid #5C5300; border-radius: 10px;">
                            <div class="card-body">
                                <h5 class="card-title" style="color: #5C5300;">Reports</h5>
                                <p class="card-text">View consumption logs and reports.</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
        else if (Model.UserRole == "Employee")
        {
            <!-- Employee Dashboard -->
            <h2 class="text-center">Employee Dashboard</h2>
            <div class="row text-center">
                <div class="col-md-6">
                    <a href="/CoffeeMachines" class="text-decoration-none">
                        <div class="card shadow" style="border: 2px solid #5C5300; border-radius: 10px;">
                            <div class="card-body">
                                <h5 class="card-title" style="color: #5C5300;">Coffee Machines</h5>
                                <p class="card-text">View and manage coffee machines.</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="/Reports" class="text-decoration-none">
                        <div class="card shadow" style="border: 2px solid #5C5300; border-radius: 10px;">
                            <div class="card-body">
                                <h5 class="card-title" style="color: #5C5300;">Reports</h5>
                                <p class="card-text">Add and view consumption logs.</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
}